<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActionHistoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="2"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_barang"
            android:layout_width="1000px"
            android:layout_height="1000px"
            android:background="@drawable/bg_card"
            android:src="@drawable/ic_action" />

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/yatra_one"
            android:text="nama barang"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/yatra_one"
            android:text="harga"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_promo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/yatra_one"
            android:text="promo"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/yatra_one"
            android:text="date"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_stts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/yatra_one"
            android:text="stts"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical|end"
        android:layout_weight="0.2">

        <ImageView
            android:visibility="gone"
            android:id="@+id/btn_like"
            android:src="@drawable/ic_oke"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/btn_tolak"
            android:src="@drawable/ic_tolak"
            android:layout_marginHorizontal="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
    </LinearLayout>

</LinearLayout>